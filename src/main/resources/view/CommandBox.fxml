<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="40" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <TextField fx:id="commandTextField" HBox.hgrow="ALWAYS" prefWidth="496" onAction="#handleCommandEntered"
               promptText="How can I assist you?"/>
    <Button fx:id="enterButton" prefHeight="35" alignment="CENTER_RIGHT" onAction="#handleCommandEntered"
            text="ENTER" styleClass="button" AnchorPane.rightAnchor="1.0" />
  </children>

</HBox>
